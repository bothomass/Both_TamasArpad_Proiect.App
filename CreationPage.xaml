<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Both_TamasArpad_Proiect.CreationPage"
             Title="Creation">
    <StackLayout Padding="20">

        <!-- Display existing creation details here -->
        <Label Text="Creation Title" FontSize="Title" />
        <Label Text="Creation Description" FontSize="Subtitle" />
        <Label Text="Photo Location" />
        <Label Text="Likes: 10" x:Name="LikesLabel" />
        <Label Text="Dislikes: 5" x:Name="DislikesLabel" />

        <!-- Like Button -->
        <Button Text="Like"
                Clicked="OnLikeClicked" 
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="CenterAndExpand"/>

        <!-- Dislike Button -->
        <Button Text="Dislike"
                Clicked="OnDislikeClicked" 
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="CenterAndExpand"/>

    </StackLayout>
</ContentPage>