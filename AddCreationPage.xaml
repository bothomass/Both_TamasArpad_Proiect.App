<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Both_TamasArpad_Proiect.AddCreationPage"
             Title="Add Creation">
    <StackLayout Padding="20">

        <!-- Title Entry -->
        <Label Text="Title" />
        <Entry Placeholder="Enter title" x:Name="TitleEntry" />

        <!-- Description Entry -->
        <Label Text="Description" />
        <Entry Placeholder="Enter description" x:Name="DescriptionEntry" />

        <!-- Photo Location Entry -->
        <Label Text="Photo Location" />
        <Entry Placeholder="Enter photo location" x:Name="PhotoLocationEntry" />

        <!-- Save Button -->
        <Button Text="Save"
                Clicked="OnFigurineAdd" 
                HorizontalOptions="FillAndExpand" 
                VerticalOptions="CenterAndExpand"/>

    </StackLayout>
</ContentPage>