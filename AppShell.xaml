<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Both_TamasArpad_Proiect.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Both_TamasArpad_Proiect"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="DarkSeaGreen">

    <TabBar >
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:MainPage}"
            />
        <ShellContent
            Title="Figurine"
            ContentTemplate="{DataTemplate local:CreationPage}"
            />
        <ShellContent
            Title="Add Figurine"
            ContentTemplate="{DataTemplate local:AddCreationPage}"
            />
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}"
            />
        <ShellContent
            Title="Contact"
            ContentTemplate="{DataTemplate local:ContactPage}"
            />
    </TabBar>

</Shell>
